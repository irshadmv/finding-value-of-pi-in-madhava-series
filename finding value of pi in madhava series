import numpy as np
def term(n,t,T):
  trm=1/n*np.cos(2*np.pi*n*t/T)
  return trm
t=0
T=20
def funct(x):
  sum=0
  for i in range(1,x+1):
    termval=4*((-1)**(i-1))*term(2*i-1,t,T)
    sum=sum+termval
  print("the number of term:",x)
  print("the value of pi=",termval)
funct(10)
funct(20)
funct(50)
funct(100)
